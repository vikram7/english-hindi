<div class="container text-center">
  {{#each error in validationErrors}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
  {{/each}}
  <div class="well">
    {{#em-form model=this action="newWord"}}
      <div>
        {{em-select
          property="partOfSpeech"
          content=partsOfSpeech
          optionValuePath="content.partOfSpeech"
          optionLabelPath="content.partOfSpeech"
          }}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Hindi Text" value=text_hindi}}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Romanized Text" value=text_romanized}}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Meaning" value=text}}
      </div>
    {{/em-form}}
  </div>
</div>
